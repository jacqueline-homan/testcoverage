- content_for :title do
  Sign In

.sign-in
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .inputs
      = link_to image_tag("github_32.png", :size => "32x32"), "/users/auth/github", :id => 'github_login'
      = link_to image_tag("twitter_32.png", :size => "32x32"), "/users/auth/twitter", :id => 'twitter_login'
      = link_to image_tag("facebook_32.png", :size => "32x32"), "/users/auth/facebook", :id => 'facebook_login'
      = link_to image_tag("linkedin_32.png", :size => "32x32"), "/users/auth/linkedin", :id => 'linkedin_login'
      = link_to image_tag("google_32.png", :size => "32x32"), "/users/auth/google", :id => 'google_login'
      = link_to image_tag("yahoo_32.png", :size => "32x32"), "/users/auth/yahoo", :id => 'yahoo_login'
      = link_to image_tag("openid_32.png", :size => "32x32"), "/users/auth/openid", :id => 'openid_login'
      = link_to image_tag("basecamp_32.png", :size => "32x32"), "/users/auth/basecamp", :id => 'basecamp_login'
      = link_to image_tag("myspace_32.png", :size => "32x32"), "/users/auth/myspace", :id => 'myspace_login'


      = f.input :username, :required => false, :autofocus => true
      = f.input :password, :required => false
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
    .actions
      = f.button :submit, "Sign in", :class => "btn primary"
.other
  = render :partial => "devise/shared/links"